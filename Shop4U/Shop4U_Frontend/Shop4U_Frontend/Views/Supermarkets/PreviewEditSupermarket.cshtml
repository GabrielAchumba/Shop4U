@model CreateSupermarketVM

@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}


@{
    ViewBag.Title = Model.PageTitle;
}

    <section class="content">
        <div class="card-header">
            <h3 class="card-title">@Model.Name</h3>
        </div>

        <div class="card-body">
            <form method="get" action="/Supermarkets/ListofSupermarketsAdmin">

                <img alt="" src="@Model.Base64String" />


                <div class="form-group">
                    <input class="form-control" placeholder="Heading" name="Heading" value="@Model.Heading">
                </div>

                <div class="form-group">
                    <textarea id="compose-textarea" class="form-control" style="height: 300px" name="Description">
                 @Model.Description</textarea>
                </div>


                <div class="card-footer">
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Done</button>
                    </div>
                </div>



            </form>
        </div>
        </section>
