@model CreateFastfoodVM

@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}


@{
    ViewBag.Title = Model.PageTitle;
}
    <section class="content">
        <div class="card-header">
            <h3 class="card-title">Add Fastfood Restaurant</h3>
        </div>

        <div class="card-body">
            <form method="post" action="/FastFoods/PreviewFastfood" enctype="multipart/form-data">

                <div class="form-group">
                    <input class="form-control" placeholder="Name of fastfood restaurant" name="Name">
                </div>

                <div class="form-group">
                    <input class="form-control" placeholder="Heading" name="Heading">
                </div>

                <div class="form-group">
                    <textarea id="compose-textarea" class="form-control" style="height: 300px" name="Description">
                    </textarea>
                </div>
                <div class="form-group">
                    <div class="btn btn-default btn-file">
                        <i class="fas fa-paperclip"></i> Attachment
                        <input type="file" name="Attachment" />
                    </div>

                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Next</button>
                    </div>
                    <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Cancel</button>
                </div>



            </form>
        </div>

    </section>
