@model Shop4U_Frontend.ViewModels.FastfoodItems.CreateItemsVM

@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}


@{
    ViewBag.Title = Model.PageTitle;
}

    <section class="content">
        <div class="card-header">
            <h3 class="card-title">Create Item(s)</h3>
        </div>

        <div class="card-body">
            <form method="post" action="/FastfoodItems/CreateItems" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="ItemCartegoryName" class="form-control">Category</label>
                    <select id="ItemCartegoryName" class="form-control select2" style="width: 100%;"
                            name="ItemCartegoryName">
                        @foreach (var category in Model.Categories)
                        {
                            <option class="categoryClass">@category</option>
                        }
                    </select>
                </div>

               

                <div class="form-group">
                    <input class="form-control" placeholder="Text File Path" name="TextFile">
                </div>

                <div class="form-group">
                    <div class="btn btn-default btn-file">
                        <p>Upload one or more files using this form:</p>
                        <i class="fas fa-paperclip"></i> Upload/>
                        <input type="file" name="ImageFiles" multiple />
                    </div>
                </div>


                <div class="card-footer">
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Create</button>
                    </div>
                    @*<button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Cancel</button>*@
                </div>



            </form>
        </div>
        </section>
